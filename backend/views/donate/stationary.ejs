<% layout("/layouts/boilerplate") -%>
<link rel="stylesheet" href="/css/stationary.css" />
<br></br><br></br>
<section class="donation-category-section py-5">
  <div class="container">
    <h2 class="section-title text-center mb-5 text-primary">Stationery We've Donated</h2>

    <!-- Row 1 -->
    <div class="row mb-4">
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/stationary/img-1.jpeg" class="img-fluid rounded simple-img" alt="Stationery Donation 1" />
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/stationary/img-2.jpeg" class="img-fluid rounded simple-img" alt="Stationery Donation 2" />
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/stationary/img-3.jpeg" class="img-fluid rounded simple-img" alt="Stationery Donation 3" />
      </div>
    </div>

    <!-- Row 2 -->
    <div class="row mb-5">
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/stationary/img-4.jpeg" class="img-fluid rounded simple-img" alt="Stationery Donation 4" />
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/stationary/img-5.jpeg" class="img-fluid rounded simple-img" alt="Stationery Donation 5" />
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/stationary/img-6.jpeg" class="img-fluid rounded simple-img" alt="Stationery Donation 6" />
      </div>
    </div>

    <!-- Gratitude Message -->
    <div class="gratitude-message text-center">
      <h4 class="text-success font-weight-bold">Tools for Learning, Shared with Love</h4>
      <p class="text-muted">
        Your donated pens, notebooks, and supplies helped students write their dreams and brighten classrooms.
        Together, we’ve empowered education in underserved communities. 📚✏️
      </p>
    </div>

    <!-- Connect Button -->
    <div class="text-center mt-4">
      <a href="/#contact" class="btn btn-outline-primary px-4 py-2">
        Connect With Us
      </a>
    </div>
  </div>
</section>
