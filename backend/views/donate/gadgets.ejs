<% layout("/layouts/boilerplate") -%>
<link rel="stylesheet" href="/css/gadgets.css" />
<br></br><br></br>
<section class="donation-category-section py-5">
  <div class="container">
    <h2 class="section-title text-center mb-5 text-primary">Electronic Gadgets We've Donated</h2>

    <!-- Row 1 -->
    <div class="row mb-4">
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/gadgets/img-1.jpg" class="img-fluid rounded simple-img" alt="Gadget Donation 1" />
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/gadgets/img-2.png" class="img-fluid rounded simple-img" alt="Gadget Donation 2" />
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/gadgets/img-3.jpg" class="img-fluid rounded simple-img" alt="Gadget Donation 3" />
      </div>
    </div>

    <!-- Row 2 -->
    <div class="row mb-5">
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/gadgets/img-4.jpg" class="img-fluid rounded simple-img" alt="Gadget Donation 4" />
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/gadgets/img-5.jpg" class="img-fluid rounded simple-img" alt="Gadget Donation 5" />
      </div>
      <div class="col-lg-4 col-md-6 mb-4">
        <img src="/img/donated/gadgets/img-6.png" class="img-fluid rounded simple-img" alt="Gadget Donation 6" />
      </div>
    </div>

    <!-- Gratitude Message -->
    <div class="gratitude-message text-center">
      <h4 class="text-success font-weight-bold">Technology That Transformed Lives!</h4>
      <p class="text-muted">
        Your donated gadgets — from phones to tablets — helped students learn, families connect, and job seekers apply online.
        Your old device became someone’s new hope. Thank you for empowering the future.
      </p>
    </div>

    <!-- Connect Button -->
    <div class="text-center mt-4">
      <a href="/#contact" class="btn btn-outline-primary px-4 py-2">
        Connect With Us
      </a>
    </div>
  </div>
</section>
